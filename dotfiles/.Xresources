! More cutchars. Will need to decide if I want this.
! URxvt*cutchars: '"'&()*,;<=>?@[]^{|}\:

! Color depth?
! URxvt*depth: 32
! Suspect this one has to do with JP input.
! URxvt.preeditType: Root

! Disable the unicode input widget
URxvt.iso14755: off
URxvt.iso14755_52: off

! Scroll to the bottom when pressing a key
URxvt.scrollTtyKeypress: on
URxvt.scrollTtyOutput: off
URxvt.scrollWithBuffer: on

! Set an arbitrarily huge scrollback; disable the ugly scrollbar
URxvt*saveLines: 100000
URxvt*scrollBar: false

! The best font in the multiverse
URxvt.font: xft:Go Mono:size=10
URxvt.boldFont: xft:Go Mono:bold
! Apparently italic fonts can lose, so coerce them a bit
URxvt.italicFont:        xft:Go Mono:italic:autohint=true
URxvt.boldItalicFont:    xft:Go Mono:bold:italic:autohint=true

! correct name so that applications detects a 256 color
! enabled terminal emulator
URxvt*termName: rxvt-unicode-256color

! emulate xterm-style control codes for ctrl+arrows and alt+arrows, etc
URxvt.keysym.S-Up:        \033[1;2A
URxvt.keysym.S-Down:      \033[1;2B
